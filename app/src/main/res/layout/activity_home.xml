<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FC"
    tools:context=".HomeActivity">

    <!-- Main scrollable content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNav"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:overScrollMode="never">

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- Glass-style Top Bar -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="#88FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/btnSettings"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_settings"
                        android:contentDescription="Settings"
                        app:tint="@color/colligo_maroon" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvGreeting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hi, Student!"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:textColor="@color/colligo_maroon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Welcome back"
                            android:textSize="16sp"
                            android:textColor="#666666"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/btnSearch"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_search"
                        android:contentDescription="Search"
                        app:tint="@color/colligo_maroon" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Campus Banner -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="10dp">

                <ImageView
                    android:id="@+id/campusImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/campus_image"
                    android:contentDescription="Campus" />

                <TextView
                    android:id="@+id/bannerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:background="#AA000000"
                    android:padding="16dp"
                    android:text="Creative Thinking • Critical Thinking • New World Thinking"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_margin="16dp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Student Hub Title -->
            <TextView
                android:id="@+id/studentNavTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Student Hub"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/colligo_maroon"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp" />

            <!-- 2x2 Feature Grid -->
            <GridLayout
                android:id="@+id/navGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:paddingHorizontal="16dp">

                <!-- Planner -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/plannerCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/plannerImg"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:src="@drawable/planner_img"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:id="@+id/plannerTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PLANNER"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:background="@color/colligo_maroon"
                            android:padding="12dp"
                            android:gravity="center" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Lost & Found -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/lostFoundCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/lostFoundImg"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:src="@drawable/lostfound_img"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:id="@+id/lostFoundTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="LOST &amp; FOUND"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:background="@color/colligo_maroon"
                            android:padding="12dp"
                            android:gravity="center" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Carpool -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/carpoolCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/carpoolImg"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:src="@drawable/carpool_img"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:id="@+id/carpoolTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="CARPOOL"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:background="@color/colligo_maroon"
                            android:padding="12dp"
                            android:gravity="center" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Campus Map -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mapCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/mapImg"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:src="@drawable/map_img"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:id="@+id/mapTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="CAMPUS MAP"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:background="@color/colligo_maroon"
                            android:padding="12dp"
                            android:gravity="center" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </GridLayout>

            <!-- Today's Schedule -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/scheduleSection"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@color/colligo_maroon">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/lectureRecycler"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingEnd="16dp"
                        android:overScrollMode="never" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/dayText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MON"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/monthText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NOV"
                            android:textColor="@color/white"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:id="@+id/dateText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18"
                            android:textColor="@color/white"
                            android:textSize="52sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation Bar -->
    <include
        android:id="@+id/bottomNav"
        layout="@layout/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>